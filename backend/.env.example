# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/cultivation_game?schema=public"

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Security
CORS_ORIGIN=http://localhost:3000,http://localhost:19006
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Database Connection Settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cultivation_game
DB_USER=postgres
DB_PASSWORD=your-password
DB_SSL=false
DB_CONNECTION_TIMEOUT=10000
DB_IDLE_TIMEOUT=30000
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=2
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=1000
DB_ENABLE_LOGGING=false
DB_MIGRATION_PATH=./migrations
RUN_MIGRATIONS=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=simple

# Game Configuration
TICK_RATE_MS=1000
MAX_IDLE_TIME_HOURS=72
GAME_TICK_INTERVAL=1000
CULTIVATION_CALCULATION_INTERVAL=60000
AUTO_SAVE_INTERVAL=300000

# Health Check
HEALTH_CHECK_TIMEOUT_MS=5000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090