            </div>
            <div class="error-actions">
                <button class="error-retry btn-primary">Retry Cultivation</button>
                <button class="error-details-toggle btn-secondary">Show Details</button>
            </div>
        </div>
    </div>

    <div id="app">
        <!-- Character Creation Modal -->
