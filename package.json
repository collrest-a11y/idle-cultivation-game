{
  "name": "idle-cultivation-game",
  "version": "1.0.0",
  "description": "A complete idle/incremental RPG set in a wuxia/xianxia world where players cultivate Qi and Body, craft unique builds through Scripture collection, and collaborate in Sects. Features continuous progression without full resets and rotating seasonal content.",
  "main": "game.js",
  "scripts": {
    "test": "jest",
    "test:integration": "node testing/integration/run-integration-tests.js",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:smoke": "playwright test tests/e2e/smoke.spec.js",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:debug": "playwright test --debug",
    "test:performance": "node testing/performance/run-performance-tests.js",
    "test:all": "npm run test && npm run test:integration && npm run test:performance",
    "test:health": "node testing/health/system-health-check.js",
    "test:ci": "npm run test:all && npm run test:e2e",
    "test:cross-system": "node scripts/testing/data-integrity-validator.js",
    "test:post-deployment": "node scripts/testing/post-deployment-validation.js",
    "test:integration-health": "node scripts/testing/integration-health-check.js",
    "build:production": "echo \"Production build not implemented yet\"",
    "analyze:bundle-size": "echo \"Bundle size analysis not implemented yet\"",
    "lint": "echo \"Linting not configured yet\"",
    "deploy:staging": "node scripts/deployment/deploy-staging.js",
    "deploy:production": "node scripts/deployment/deploy-production.js",
    "rollback": "node scripts/deployment/rollback-production.js",
    "validate:production": "node scripts/deployment/validate-production-config.js",
    "confidence:calculate": "node scripts/deployment/calculate-confidence.js",
    "monitoring:configure": "node scripts/monitoring/configure-alerts.js",
    "backup:create": "node scripts/deployment/backup-production.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "benchmark": "^2.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.55.1",
    "puppeteer": "^24.22.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/collrest-a11y/idle-cultivation-game.git"
  },
  "keywords": [],
